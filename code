<script>
(function(){
  var snow = document.createElement('xprs-app-snow');
  snow.innerHTML = '<xprs-app-snow-a></xprs-app-snow-a><xprs-app-snow-b></xprs-app-snow-b><xprs-app-snow-c></xprs-app-snow-c>';
  document.body.appendChild(snow);

  setTimeout(function(){
    snow.setAttribute('xprs-app-snow-fade-out', '');
  }, 3 * 1000);

  setTimeout(function(){
    snow.parentNode.removeChild(snow);
  }, 20 * 1000);
})();
</script>
